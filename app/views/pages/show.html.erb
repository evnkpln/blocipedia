<div>
    <h1>
        <%= @page.title %> <br>
        <small>
            submitted <%= time_ago_in_words(@page.created_at) %> ago by <%= @page.user.email %>
        </small>
    </h1>
</div>

<div class="row">
    <div class="col-md-8">
        <p><%= markdown.render(@page.body).html_safe %></p>
    </div>
    <!-- <%#= if user_is_authorized_for_post?(@page) %> -->
        <div class="col-md-4">
            <%= link_to "Edit", edit_wiki_page_path(@page.wiki, @page), class: 'btn btn-success' %>
            <%= link_to "Delete Page", [@page.wiki, @page], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this page?'}%>
        </div>
    <!-- <%#= end %> -->
</div>
